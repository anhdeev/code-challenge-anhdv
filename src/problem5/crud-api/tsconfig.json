{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "./build",
    "rootDir": "./",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true
  },
  "include": ["tests/**/*", "src/**/*.ts"],
  "exclude": ["node_modules"]
}
